gold = #9a7846

@font-face
  font-family: ak
  src: url('../akk.otf')
  font-weight: normal

@font-face
  font-family: akk
  src: url('../akkk.otf')
  font-weight: bold

html
  font-family: ak, georgia
  font-size: 18px
  line-height: 1.5em
  background-color: #FAFAFA
  -webkit-font-smoothing: antialiased

p
  margin: 0 0 1.5rem 0
  max-width: 28em

ul
  margin: 0 0 1.5rem 0
  padding: 0
  &.unstyled
    list-style-type: none


h1, h2, h3, h4, h5, h6
  margin: 0 0 1.5rem 0
  font-size: 1rem
  font-weight: bold
  letter-spacing: -1px

b, strong
  letter-spacing: -1px

h1
  font-size: 1.25rem

.wrap
  // max-width: 28rem
  margin: 0 auto

.navbar
  background: gold
  color: #fff
  margin-bottom: 1.5rem
  padding: .75em 0
  a
    color: white
  h1
    font-weight: bold
    margin: 0
    display: inline-block
  nav
    display: inline-block
    ul
      display: inline-block
      margin: 0
    li
      a

.navigation
  width: 18em
  float: left

.body
  width: 28em
  float: left

a
  text-decoration: none

.btn
  display: inline-block
  vertical-align: middle
  white-space: no-wrap
  cursor: pointer
  border: none
  margin: 0
  padding: 0 1em
  text-align: center
  line-height: 2em

.btn--primary
  background: gold
  border: 3px solid gold
  color: white
  text-transform: uppercase

.btn--alt
  background: transparent
  border: 3px solid gold
  // background: gold
  color: gold
  text-transform: uppercase
  // box-shadow: 3px 3px 0px 1px rgba(gold,.4)

.posts__post
  margin-bottom: 1.5rem

.radform
  input, textarea
    width: 100%
    box-sizing: border-box
    display: block
  textarea
    height: 20em